{% extends "../layouts/base.twig" %}

{% block content %}
<link rel='stylesheet' href='/css/news.css'>
  <div class="row">
    <div class="main">
 {% for evento in eventos %}
  {% if evento.estado == 'publicada' %}
   {% if data.dataactual < evento.dataEvento %}
      <h1>{{evento.titulo}}</h1></span>
      {% if evento.imagem.url %}
         <img src="{{evento.imagem.url}}" alt="{{evento.descricaoImagem}}" style="max-width:100%">
      {% endif %}
    <table class="tabevent">
      <tr>
        <td><strong>Local do Evento:</strong></td><td>{{evento.localizacaoEvento}}</td>
      </tr>
      <tr>
        <td><strong>Data do Evento:</strong></td><td>{{evento._.dataEvento.format('YYYY-MM-DD')}}</td>
      </tr>
      <tr>
        <td><strong>Hora do Evento:</strong></td><td>{{evento._.dataEvento.format('H:m')}} horas</td>
      </tr>
      <tr>
      <td><strong>Local do Evento:</strong></td><td>{{evento.localizacaoEvento}}</td>
      </tr>	 
      <tr>
        <td colspan="2"><p>{{evento.descricaoEvento}}</p></td>
      </tr>  
    </table>
	  <br><span>{{evento._.publicadoEm.format('YYYY-MM-DD H:m')}}<br>
	  <hr>
   {% endif %}
  {% endif %}
 {% endfor %}
    </div>

    <div class="side">
      <h1>Eventos Passados:</h1>
 {% for evento in eventos %}
  {% if evento.estado == 'publicada' %}
   {% if data.dataactual >= evento.dataEvento %}
      <div class="news-small">
      {% if evento.imagem.url %}
         <img src="{{evento.imagem.url}}" alt="{{evento.descricaoImagem}}" style="max-width:100%">
      {% endif %}
        <span>{{evento._.dataEvento.format('YYYY-MM-DD H:m')}}<br>
	<span>{{evento.localizacaoEvento}}</span><br>
        <a href="/evento/{{evento.slug}}">{{evento.titulo}}</a></span>
      </div>
   {% endif %}
  {% endif %}
 {% endfor %}
    </div>
  </div>

{% endblock %}
